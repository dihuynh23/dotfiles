{
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "Bash(git --version:*)",
      "Bash(gh:*)",
      "Bash(find:*)",
      "WebFetch(domain:github.com)",
      "WebSearch",
      "Bash(dot status:*)",
      "Bash(dot diff:*)",
      "Bash(dot log:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)"
    ]
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  }
}
